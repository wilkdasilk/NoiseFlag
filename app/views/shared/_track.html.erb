<div class="card contain">
  <div class="col-sm-6 col-xs-6">
    <img class="card-img-top track-img" src="<%=track.image_url %>" alt="Card image cap">
  </div>
  <div class="col-sm-6 col-xs-6">
    <div class="card-block">
      <h4 class="card-title">"<%= track.name%>" by <%= track.artist%></h4>
      <p class="card-text">Album: <%= track.album %></p>
      <% if adding %>
        <% if @flag.tracks.include?(track)%>
          <p><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> included</p>
        <% else %>
          <%= link_to entries_path(@flag, track), method: "post" do %>
            <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
          <% end %>
        <% end %>
      <% end %>
      <% if !!entry %>
        <%= render :partial => "shared/entry_info", locals: {entry: entry} %>
      <% end %>
    </div>
  </div>


</div>
