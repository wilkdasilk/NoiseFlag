<% if !have_recent_location? %>
  <script>
  $(document).on('turbolinks:load', function() {
    getGeoLocation();
  });
  </script>
<% end %>

<h1>Flags</h1>
<span><%= link_to "Use my location", root_path %></span>
<span>or</span>
<form>
  <input type="text" name="center" placeholder="search by city, address, or monument">
  <input type="submit">
</form> <br />
<%= image_tag "http://maps.googleapis.com/maps/api/staticmap?center=#{center}#{markers_string(@flags)}&zoom=12&size=480x300&key=AIzaSyCgLSktRs58zsQ33m06GoGOgexCNJuOruA",
              class: 'img-fluid img-rounded', alt: "Flags on the map"%>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag|%>
      <tr>
        <td><%= flag.name %></td>
        <td><%= flag.description %></td>
        <td><%= flag.user.name %></td>
        <td><%= link_to 'Show', flag %></td>
        <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
        <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flag', new_flag_path %>
