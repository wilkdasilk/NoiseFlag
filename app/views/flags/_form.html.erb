  <div class="field form-group">
    <%= f.text_field :description, placeholder: "Tell us about the noises here...", required: true, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Plant it!", class: "btn btn-primary btn-cust"%>
  </div>
<% end %>
